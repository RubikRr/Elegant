@model Elegant.Business.Models.ViewModels.Authorization.Login

<form method="post" asp-area="" asp-controller="auth" asp-action="login">
  <div class="row justify-content-center">
      <div class="col-6">
          <div class="justify-content-center"><h1>Вход</h1></div>
          <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

          <div class="mb-3">
              <span style="color:red" asp-validation-for="Email"></span>
              <input asp-for="Email" class="form-control" placeholder="Логин">
          </div>
          <div class="mb-3">
                <span style="color:red" asp-validation-for="Password"></span>
                <input asp-for="Password" type="password" class="form-control" placeholder="Пароль">
          </div>
          <div class="mb-3 form-check">
              <input class="form-check-input" name="remember" type="checkbox" value="true" id="flexCheckDefault">
              <label class="form-check-label" for="flexCheckDefault">Запомнить меня?</label>
          </div>
          <input type="text" hidden value=@(string.IsNullOrEmpty(Model.ReturnUrl) ? "/Home/index":Model.ReturnUrl) name="ReturnUrl">
            <button type="submit" class="btn btn-dark">Войти</button>
            <a asp-controller="auth" asp-action="registration" asp-route-returnUrl=@(string.IsNullOrEmpty(Model.ReturnUrl) ? "/Home/index":Model.ReturnUrl) class="btn btn-light">Регистрация нового пользователя</a>
       </div>
    </div>
</form>
