@model Elegant.Web.Models.ProductViewModel
@{

}
@if (Model != null)
{

    <div class="row">

        <div class="col-6">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/dsds.jpg" class="d-block w-100" alt="...">
                    </div>
                    @foreach (var path in Model.ImageItemsPaths)
                    {  
                        <div class="carousel-item">
                            <img src=@path class="d-block w-100" alt="...">
                        </div>
                           //Вова привет
                           //Привет Алина
                           //Мы крутые
                           //тест
                    }
                </div> 
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Предыдущий</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Следующий</span>
                </button>
            </div>
        </div>
        <div class="col-6">
            <div style=" display: flex;">
                <h5> <a href="/product/index/@Model.Id"> @Model.Name </a></h5>
                <button onclick="myFunction(this)" class="btn ml-3 fa fa-heart-o"><i class=""></i></button>

            </div>
            <h5>Цена:@Model.Cost р.</h5>
            <p>Описание:@Model.Description</p>
            <a class="btn btn-dark" href="/cart/add?productId=@Model.Id">Добавить в карзину</a>
            <a class="btn btn-primary" href="/home/index">Продолжить покупки</a>
        </div>
    </div>
}
else
{
    <h1>Товар с данным id не существует</h1>
}
