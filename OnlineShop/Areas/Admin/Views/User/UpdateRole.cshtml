@model UserViewModel
<form method="post" asp-area="admin" asp-controller="user" asp-action="updateRole">
    <div class="row mb-3">
        <div class="col-12">
            <h1>Изменение роли</h1>
        </div>
    </div>
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
    <div class="row mb-3">
        <label for="password" class="col-sm-2 col-form-label">Роль</label>
        <div class="col-sm-4">
            <select class="form-control"  name="roleName"
                asp-items="ViewBag.Roles">
            </select>
            </div>
         
    </div>
       <div class="row mb-3">
        <div class="col-sm-4">
            <input type="text" hidden name="userId" id="id" value=@Model.Id class="form-control" >
         </div>
    </div>
   
   <button class="btn btn-success" type="submit">Изменить</button>
</form>