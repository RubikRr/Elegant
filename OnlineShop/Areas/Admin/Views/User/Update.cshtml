@model User

<form method="post" asp-area="admin" asp-controller="user" asp-action="update">
    <div class="row mb-3">
        <div class="col-12">
            <h1>Изменение данных</h1>
        </div>
    </div>
  
    <div class="row mb-3">
        <label for="firstName" class="col-sm-2 col-form-label">Имя</label>
        <div class="col-sm-4">
            <input type="text" asp-for="FirstName"id="firstName"class="form-control" >
         </div>
         <span style="color:red" asp-validation-for="FirstName"></span>
    </div>
    <div class="row mb-3">
        <label for="lastName" class="col-sm-2 col-form-label">Фамилия</label>
        <div class="col-sm-4">
            <input type="text" asp-for="LastName"  id="lastName"class="form-control" >
         </div>
         <span style="color:red" asp-validation-for="LastName"></span>
    </div>
     <div class="row mb-3">
        <label for="phone" class="col-sm-2 col-form-label">Телефон</label>
        <div class="col-sm-4">
            <input type="tel" pattern="+[7]{1} [0-9]{3} [0-9]{2} [0-9]{2}" asp-for="Phone" id="phone"class="form-control" >
         </div>
         <span style="color:red" asp-validation-for="Phone"></span>
    </div>
    <div class="row mb-3">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-4">
            <input type="text" asp-for="Email" id="email"class="form-control" >
         </div>
         <span style="color:red" asp-validation-for="Email"></span>
    </div>
    <div class="row mb-3">
        <label for="password" class="col-sm-2 col-form-label">Пароль</label>
        <div class="col-sm-4">
            <input type="text" asp-for="Password" id="password"class="form-control" >
         </div>
         <span style="color:red" asp-validation-for="Phone"></span>
    </div>
     <div class="row mb-3">
        <label for="password" class="col-sm-2 col-form-label">Роль</label>
        <div class="col-sm-4">
            <select class="form-control"  asp-for="RoleName" 
             asp-items="ViewBag.Roles">
            </select>
         </div>
         <span style="color:red" asp-validation-for="RoleName"></span>
    </div>
      <div class="row mb-3">
        <div class="col-sm-4">
            <input type="text" hidden asp-for="Id"id="id"class="form-control" >
         </div>
    </div>
   <button class="btn btn-success" type="submit">Изменить</button>
</form>