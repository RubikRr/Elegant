@model List<Role>
<div class="row">
        @await Html.PartialAsync("LeftAdminMenu")
    <div class="col-9">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th colspan="2">Список ролей</th>
                </tr>
            </thead>
            @foreach (var role in Model)
            {
                 <tbody class="table-group-divider">
                <tr>
                    <td class="w-75">@role.Name</td>
                    <td><a class="btn btn-danger" asp-area="admin" asp-controller="role" asp-action="remove" asp-route-roleId=@role.Id>Удалить</a></td>
                </tr>
            </tbody>
            }
            <tfoot>
                <tr>
                   <th colspan="1"></th>
                   <th><a class="btn btn-success" asp-area="admin" asp-controller="role" asp-action="add">Добавить</a></th>
                </tr>
            </tfoot>
        </table>
        @*<a class="btn btn-success pull-right" asp-area="admin" asp-controller="role" asp-action="add">Добавить</a>
    *@</div>
</div>