@model List<User>
<div class="row">
        @await Html.PartialAsync("LeftAdminMenu")

    <div class="col-9">
        <h3>Список пользователей</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="w-50">Email</th>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Номер</th>
                </tr>   
            </thead>
            @foreach (var user in Model)
            {   

                <tbody>
                    <tr onclick="window.location.href='/admin/user/Details?userId=@user.Id'; return false">
                        <td>@user.Email</td>
                        <td>@(user?.FirstName ?? "-")</td>
                        <td>@(user?.LastName ?? "-")</td>
                        <td>@(user?.Phone ?? "-")</td>
                    </tr>
                </tbody>
            }
            <tfoot>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><a asp-area="admin" 
                        asp-controller="user" asp-action="Add" 
                        class="btn btn-primary addUser">Добавить пользователя</a>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>