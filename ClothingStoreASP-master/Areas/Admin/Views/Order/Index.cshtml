@model List<OrderViewModel>
<div class="row">
        @await Html.PartialAsync("LeftAdminMenu")
    <div class="col-9">
        <h1>Заказы</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Сумма</th>
                    <th>Статус</th>
                    <th>Пользователь</th>
                    <th>Дата</th>
                    <th>Время</th>
                </tr>
            </thead>
            @for(int i=0;i<Model.Count;i++)
            {
                <tbody>
                    <tr onclick="window.location.href='/admin/order/Details?orderId=@Model[i].Id'; return false">
                        <td>@(i+1)</td>
                        <td>@Model[i].Total</td>
                        <td>@EnumHelper.GetDisplaName(@Model[i].Status)</td>
                        <td>@Model[i].DeliveryInfo.Name</td>
                        <td>@Model[i].Date.ToShortDateString()</td>
                        <td>@Model[i].Date.ToShortTimeString()</td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>